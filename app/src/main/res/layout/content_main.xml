<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.omcomputers.mygridlayout.MainActivity"
    tools:showIn="@layout/activity_main">


    <GridLayout

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:rowCount="3"
        android:columnCount="2"
        android:orientation="horizontal"

        android:id="@+id/gl">
        <RelativeLayout
            android:id="@+id/rl1"
            android:layout_width="170dp"
            android:layout_height="170dp"
            android:layout_row="0"
            android:layout_column="0"
            android:background="@drawable/border"

            >
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:orientation="vertical"
                android:gravity="center">

                <ImageView
                android:id="@+id/iv1"
                android:layout_width="60dp"
                android:layout_height="60dp"
                />
            <TextView
                android:id="@+id/tv1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="QUALITY\nMANAGEMENT"
                android:textColor="@android:color/white"
                android:gravity="center"/>
            </LinearLayout>
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/rl2"
            android:layout_width="170dp"
            android:layout_height="170dp"
            android:layout_row="0"
            android:layout_column="1"
            android:background="@drawable/border1"
            >
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:orientation="vertical"
                android:gravity="center">
            <ImageView
                android:id="@+id/iv2"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_centerInParent="true"/>

            <TextView
                android:id="@+id/tv2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="I.T\nMANAGEMENT"
                android:layout_centerInParent="true"
                android:layout_below="@+id/iv2"
                android:textColor="@android:color/white"
                android:gravity="center"/>
            </LinearLayout>
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/rl3"
            android:layout_width="170dp"
            android:layout_height="170dp"
            android:layout_row="1"
            android:layout_column="0"
            android:background="@drawable/border3"
            >
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:orientation="vertical"
                android:gravity="center">
            <ImageView
                android:id="@+id/iv3"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_centerInParent="true"/>

            <TextView
                android:id="@+id/tv3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="PROJECT\nMANAGEMENT"
                android:layout_centerInParent="true"
                android:layout_below="@+id/iv3"
                android:textColor="@android:color/white"
                android:gravity="center"/>
            </LinearLayout>
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/rl4"
            android:layout_width="170dp"
            android:layout_height="170dp"
            android:layout_row="1"
            android:layout_column="1"
            android:background="@drawable/border2"
            >
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:orientation="vertical"
                android:gravity="center">
            <ImageView
                android:id="@+id/iv4"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_centerInParent="true"/>

            <TextView
                android:id="@+id/tv4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="DATA\nSCIENTIST"
                android:layout_centerInParent="true"
                android:layout_below="@+id/iv4"
                android:textColor="@android:color/white"
                android:gravity="center"/>
            </LinearLayout>
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/rl5"
            android:layout_width="170dp"
            android:layout_height="170dp"
            android:layout_row="2"
            android:layout_column="0"
            android:background="@drawable/border"
            >
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:orientation="vertical"
                android:gravity="center">
            <ImageView
                android:id="@+id/iv5"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_centerInParent="true"/>

            <TextView
                android:id="@+id/tv5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="BUSINESS\nMANAGEMENT"
                android:layout_centerInParent="true"
                android:layout_below="@+id/iv5"
                android:textColor="@android:color/white"
                android:gravity="center"/>
                </LinearLayout>
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/rl6"
            android:layout_width="170dp"
            android:layout_height="170dp"
            android:layout_row="2"
            android:layout_column="1"
            android:background="@drawable/border1"
            >
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:orientation="vertical"
                android:gravity="center">
            <ImageView
                android:id="@+id/iv6"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_centerInParent="true"/>

            <TextView
                android:id="@+id/tv6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="BUSINESS\nMANAGEMENT"
                android:layout_centerInParent="true"
                android:layout_below="@+id/iv6"
                android:textColor="@android:color/white"
                android:gravity="center"/>
            </LinearLayout>

        </RelativeLayout>
    </GridLayout>
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true">
    <Button
        android:id="@+id/button1"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:text="All Courses"
        android:layout_alignParentLeft="true"/>
    <Button
        android:id="@+id/button2"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:text="Categories"
        android:layout_alignParentRight="true"
        />
    </RelativeLayout>

</RelativeLayout>
